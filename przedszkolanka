#include <iostream>
using namespace std;

int main() {
    int lzestawow;
    cin >> lzestawow;

    for (int i = 0; i < lzestawow; ++i) {
        int ldzieciA, ldzieciB;
        cin >> ldzieciA >> ldzieciB;

        int lCuksow = ldzieciA;
        while (lCuksow % ldzieciB != 0) {
            lCuksow += ldzieciA;
        }

        cout << lCuksow << endl;
    }

    return 0;
}
